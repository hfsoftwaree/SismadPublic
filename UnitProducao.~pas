uses UnitDM, UnitPrincipal, UnitPesquisa1, UnitPesquisa2;


{$R *.dfm}

procedure TfrmProducao.BitBtn4Click(Sender: TObject);
begin
DM.TPRODUCAO.Open;
DM.TPRODUCAO.Append;
PageControl1.ActivePage := TabSheet1;
BitBtn3.Enabled := False;
BitBtn4.Enabled := False;
BitBtn5.Enabled := False;
BitBtn6.Enabled := False;
DATA.SetFocus;
Data.Text := DateToStr(now);
end;

procedure TfrmProducao.BitBtn1Click(Sender: TObject);
var vn1, vn2, vsoma : Real;
begin
	if DATA.Text='' then
   	begin
         Application.MessageBox('Data da Serragem deve ser informada!', 'Lançamento', mb_Ok + mb_IconInformation);
         DATA.SetFocus;
    end
    else
begin
	if CODPRODUTO.Text='' then
   	begin
         Application.MessageBox('Código do Produto/Toro deve ser informado!', 'Lançamento', mb_Ok + mb_IconInformation);
         CODPRODUTO.SetFocus;
    end;
    end;

if (DATA.Text <> '') and (CODPRODUTO.Text <> '') then
begin
If Application.MessageBox('Confirma a Inclusão/Alteração?', 'Confirmação',
mb_YesNo + mb_ICONQUESTION) = idYes then
begin
    vn1:=0;
    vn2:=0;
    vsoma:=0;
    vn1:= QTORO.Value;
    vn2:= IND.Value;
    vsoma := vn1/vn2;
    QSERRADA.Text := FloatToStr(vsoma);

    DM.TEntrada_Discriminacao.Open;
    DM.TEntrada_Discriminacao.Locate('CODIGOPRODUTO',CODPRODUTO.text,[]);
    DM.TEntrada_Discriminacao.Edit;
    DM.TEntrada_Discriminacao['SITUACAO'] := '1';
    DM.TEntrada_Discriminacao.Post;
    DM.TEntrada_Discriminacao.Close;

    DM.TPRODUCAO.Post;
    DM.TPRODUCAO.Refresh;
    If Application.MessageBox('Continua Lançamento?', 'Confirmação',
    mb_YesNo + mb_ICONQUESTION) = idYes then
    begin
    DM.TPRODUCAO.Append;
    DATA.SetFocus;
    Data.Text := DateToStr(now);
    end
    else
    begin
    BitBtn3.Enabled := True;
    BitBtn4.Enabled := True;
    BitBtn5.Enabled := True;
    BitBtn6.Enabled := True;
    DM.TPRODUCAO.Close;
    close;
    end
    end;
    end;
end;

procedure TfrmProducao.BitBtn2Click(Sender: TObject);
begin
DM.TPRODUCAO.Close;
BitBtn3.Enabled := True;
BitBtn4.Enabled := True;
BitBtn5.Enabled := True;
BitBtn6.Enabled := True;
DATA.Clear;
DATA.SetFocus;
IND.Clear;
end;

procedure TfrmProducao.BitBtn3Click(Sender: TObject);
begin
DM.TPRODUCAO.Close;
Close;
end;

procedure TfrmProducao.Edit1Change(Sender: TObject);
begin
DM.TPRODUCAO.Locate('CODPRODUTO',Edit1.text,[]);
end;

procedure TfrmProducao.FormShow(Sender: TObject);
begin
IND.Clear;
PageControl1.ActivePage := TabSheet1;
Label1.Caption := 'Lançamento da Produção';
end;

procedure TfrmProducao.BitBtn7Click(Sender: TObject);
begin
DM.TPRODUCAO.Close;
Label1.Caption := 'Lançamento da Produção';
PageControl1.ActivePage := TabSheet1;
BitBtn4.Enabled := True;
BitBtn1.Enabled := True;
BitBtn2.Enabled := True;
BitBtn7.Visible := False;
BitBtn6.Visible := True;
DATA.SetFocus;
end;

procedure TfrmProducao.BitBtn6Click(Sender: TObject);
begin
DM.TPRODUCAO.Open;
if DM.TPRODUCAO.RecordCount = 0 then
begin
DM.TPRODUCAO.Close;
Application.MessageBox('Não hà Lançamentos para pesquisa!', 'Pesquisa', mb_Ok + mb_IconInformation);
DATA.SetFocus;
end
else
begin
DM.TPRODUCAO.IndexFieldNames := ('CODPRODUTO');
Label1.Caption := 'Pesquisa de Lançamento da Prdução';
PageControl1.ActivePage := TabSheet2;
BitBtn4.Enabled := False;
BitBtn1.Enabled := False;
BitBtn2.Enabled := False;
BitBtn6.Visible := False;
BitBtn7.Visible := True;
Edit1.SetFocus;
end;
end;

procedure TfrmProducao.TabSheet1Show(Sender: TObject);
begin
DM.TPRODUCAO.Close;
Label1.Caption := 'Lançamento da Produção';
DATA.SetFocus;
BitBtn7.Visible := False;
BitBtn6.Visible := True;
end;


procedure TfrmProducao.DBEdit11Exit(Sender: TObject);
begin
bitbtn1.Click;
end;

procedure TfrmProducao.TabSheet2Show(Sender: TObject);
begin
DM.TPRODUCAO.Open;
Label1.Caption := 'Pesquisa de Lançamento da Produção';
BitBtn6.Visible := False;
BitBtn7.Visible := True;
Edit1.SetFocus;
end;

procedure TfrmProducao.DBEDIT3Exit(Sender: TObject);
begin
BITBTN1.Click;
end;

procedure TfrmProducao.BitBtn5Click(Sender: TObject);
begin
if DM.TPRODUCAO.RecordCount = 0 then
begin
Application.MessageBox('Não há registros para exclusão!', 'Informação', mb_Ok + mb_IconExclamation);
PageControl1.ActivePage := TabSheet1;
Data.SetFocus;
BitBtn4.Enabled := True;
BitBtn5.Enabled := True;
BitBtn6.Enabled := True;
end;

if DM.TPRODUCAO.RecordCount <> 0 then
begin
if Application.MessageBox ('Confirma Exclusão?','Confirmação', mb_YesNo +
MB_ICONQUESTION) = idYes then
begin
DM.TEntrada_Discriminacao.Open;
DM.TEntrada_Discriminacao.Locate('CODIGOPRODUTO',DBEDIT1.text,[]);
DM.TEntrada_Discriminacao.Edit;
DM.TEntrada_Discriminacao['SITUACAO'] := '0';
DM.TEntrada_Discriminacao.Post;
DM.TEntrada_Discriminacao.Close;

Edit1.SetFocus;
DM.TPRODUCAO.Delete;
DM.TPRODUCAO.Refresh;
end
else
Edit1.SetFocus;
end;
end;

procedure TfrmProducao.DBEdit1Enter(Sender: TObject);
begin
frmpesquisa1.ShowModal;
end;

procedure TfrmProducao.PRODUTOKeyPress(Sender: TObject; var Key: Char);
begin
  if key = #13 then
   bitBtn1.Click;
end;

End.
